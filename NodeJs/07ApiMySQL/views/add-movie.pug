doctype html
html(lang=es)
    head
    include templates/header

body
    include templates/navBar
    h1(style="text-align:center;")= title
    a.button(href="/") Regresar
    div.container__form
        form.form(method="POST" action="/")
            h1 Agrega una nueva pelicula!
            fieldset
                div.container
                    label(for="movie_id") IMDB id:
                    input#movie_id(type="text", name="movie_id", required)
                div.container
                    label(for="title") Título:
                    input#title(type="text", name="title", required)
                div.container
                    label(for="release_year") Año:
                    input#release_year(type="text", name="release_year", required)
                div.container
                    label(for="rating") Calificación:
                    input#rating(type="text", name="rating", required)
                div.container
                    label(for="image") Poster:
                    input#image(type="text", name="image", required)
                div.container
                    button.button(type="submit", value="Agregar") Confirmar
