        -if(data.length)
            each movie in data
                article.movie
                    figure
                        img(src=`${movie.image}`)
                    div.info
                        h2= movie.title
                        h2= movie.release_year
                        h2= movie.rating
                        a(href=`/editar/?movie_id=${movie.movie_id}&year=${movie.release_year}`) Editar
                        a(href=`/eliminar/?movie_id=${movie.movie_id}`) Eliminar

        -else
                h1 No hay datos



